{
  "name": "polymorphic-factory",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "format:check": "prettier --check packages/**/src",
    "format:write": "prettier --write packages/**/src",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "react": "pnpm --filter=@polymorphic-factory/react",
    "solid": "pnpm --filter=@polymorphic-factory/solid",
    "release": "changeset publish",
    "release:rc": "changeset publish --tag rc",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "version": "changeset version",
    "version:rc": "changeset version --snapshot rc"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "2.25.2",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "eslint": "8.28.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "prettier": "2.8.0",
    "tsup": "^6.3.0",
    "turbo": "1.6.3",
    "typescript": "4.9.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.17.0"
}
